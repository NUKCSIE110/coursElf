.query
    padding-top: 5em
    .dropdown
        display: inline-block
        margin-right: 1em
    .loading
        display: inline-block
        margin-left: 1em
    .result
        background-color: rgba(0,0,0,0)
        padding-bottom: 20em
        .resultCard
            color: #212529;
            text-decoration: none;
            min-height: 5em
            margin-top: 1.5em
            width: 100%
            background-color: white
            transition: all 1s
            box-shadow: 0.25em 0.25em 0.5em 0em rgba(0,0,0,0.5)
            display: flex
            justify-content: space-around
            align-items: center
            &:hover
                box-shadow: 0 0 0 0 rgba(0,0,0,0)
                transform: translate(0.25em,0.25em)
            .classID
                color: #a0a0a0
            .className
                letter-spacing: 0.15em
            .compulsory,.choose
                line-height: 1.8em
                min-width: 6em
            .compulsory
                color: steelblue
                &::before
                    content: "必"
                    border: solid 2px steelblue
            .choose
                color: #a0a0a0
                &::before
                    content: "選"
                    border: solid 2px #a0a0a0
            .compulsory::before,.choose::before //選修必修icon
                display: inline-block
                width: 1.8em
                height: 1.8em
                margin-right: 0.5em
                box-sizing: border-box
                text-align: center
                line-height: 1.4em
                font-weight: bold
                border-radius: 0.9em
            .teacher
                min-width: 6em
                text-align: center
                &::before
                    content: "教授:"
                
        .resultCard.first
            flex-direction: column
            justify-content: center
            font-size: 1.2em
            height: 20em
            .fas
                font-size: 3em
                margin-bottom: 0.25em
            .fa-info-circle
                color: steelblue
            .fa-exclamation-triangle
                color: gold

.tooltip a
    color: lightskyblue 

@media(max-width: 530px)
    .resultCard .location
        display: none

@media(max-width: 450px)
    .query
        .loading
            text-align: center
            font-size: 30px
            display: block
            margin-top: 1em
        .selTarget
            margin-top: 1em

@media(max-width: 350px)
    .resultCard
        .compulsory,.choose
            min-width: 3em !important
        .compulsory::before,.choose::before
            font-size: 0px
            border: solid 0px rgba(0,0,0,0) !important
        .className
            letter-spacing: 0px !important
        .teacher
            min-width: 4em !important
            &::before
                font-size: 0px
        &.first p
            font-size: 0.9em
