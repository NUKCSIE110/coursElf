body
  font-family: 'Noto Sans TC', sans-serif
  background-image: url('http://api.thumbr.it/whitenoise-100x100.png?background=fafafaff&noise=626262&density=20&opacity=10')
.titleBar
  display: flex
  justify-content: space-between
  background-color: rgba(255,255,255,0.95)
  box-shadow: 0px 0px 3px 3px rgba(0,0,0,0.5)
  color: #333
  font-size: 20px
  width: 100%
  height: 3em
  box-sizing: border-box
  position: fixed
  top: 0;
  z-index: 999

  h1
    font-size: 1.2em
    padding: 0.75em
    letter-spacing: 0.2em
    &:hover
      cursor pointer
    i 
      position: relative
      animation: floatingIcon 1s ease-in-out infinite alternate
  .burger
    display: none
    font-size: 1.2em
    padding: 0.75em 1.5em 0.75em 0
  nav
    display: flex
    justify-content flex-end
    padding-right: 2em 
    box-sizing: border-box

    a
      display: inline-block
      padding: 1em
      box-sizing: border-box
      transition: all 0.5s
      &:hover, &.selected
        cursor pointer
        border-bottom: solid 2px rgba(0,0,0,0.5)
      &:hover 
        color: #d0d0d0 !important

.content
  margin: 3em auto 0 auto
  width: 800px
  min-height: 100em
  position: relative
footer
  display: flex !important
  justify-content: center
  font-size: 22px
  height: 4em
  background: #1a1a1a
  a
    font-family: 'VT323', cursive;
    color: white
    display: inline-block
    margin: 0 auto
    line-height: 3em
    &:hover
      color: #f0f0f0
      cursor: pointer
      text-decoration: none
    i 
      margin-right: 0.5em

@media (max-width: 900px)
  .content
    width: 95vw !important

@media (max-width: 560px)
  .titleBar nav
    display: none
    //display: block
    position: absolute
    padding: 0
    top: 3em
    right: 1em
    text-align right
    background: rgba(255,255,255,0.8)
    a
      display: block
      height: 3em;
  .titleBar .burger
    display: inline-block

@media (max-width: 350px)
  .titleBar
    font-size: 1em

