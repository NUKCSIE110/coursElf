ul.timeline 
    position: fixed
    top: 10em
    left: 19vw
    width: 10em
    height: 20em
    //margin-left: 10em
    font-size: 1.5em;
    border-left: solid 2px black
    display: flex
    flex-direction: column
    justify-content: space-around
    li 
        display: flex
        align-items: center
        text-align: center
        position: relative
        .info
            box-sizing: border-box
            padding: 0 1em
            .date
                margin-bottom: 0.5em
        &:nth-child(odd)::after,
        &:nth-child(even)::before
            content: ''
            display: block
            box-sizing: border-box
            width: 1em
            height: 1em
            border-radius: 50%
            border: solid 0.25em black
            background-color: #fafafa
        &:nth-child(odd)
            justify-content flex-end
            left: -9.5em
        &:nth-child(even)
            justify-content flex-start
            left: -0.5em
.query
    padding-top: 5em
    margin-left: 35vw
    width: 50vw
    //background-color: rgba(255,255,255,0.5)
    /*p
        display: inline-block
        padding: .375rem 2em
        line-height: 1.5
        box-sizing: border-box
    */
    .dropdown
        display: inline-block
        .loading
            margin-left: 2em
    .result
        background-color: rgba(0,0,0,0)
        .card
            min-height: 5em
            margin-top: 1.5em
            width: 100%
            background-color: white
            transition: all 1s
            box-shadow: 0.25em 0.25em 0.5em 0em rgba(0,0,0,0.5)
            display: flex
            justify-content: center
            align-items: center
        .card.first
            font-size: 1.2em
            height: 20em
            .fas
                font-size: 3em
                margin-bottom: 0.25em
                color: steelblue

.titleBar a.allCourses
    display: none

@media (max-width: 1350px)
    .content
